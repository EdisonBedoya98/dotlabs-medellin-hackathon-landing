---
import { textGradient } from "../utils/constants";
import i18next, { t } from "i18next";
import { Trans } from "astro-i18next/components";
export interface Props {
  firstTextContent: any;
  secondTextContent: any;
  imgPath: string;
  imgAlt: string;
  reverse?: boolean;
  mainTitle?: any;
  secundaryTitle?: any;
}

const { firstTextContent, secondTextContent, imgPath, imgAlt, reverse, mainTitle, secundaryTitle } = Astro.props;
---

<section
  class={`h-screen min-h-[20rem] flex justify-between ${
    reverse ? "flex-row-reverse" : null
  }`}
>
  <div class="w-1/2 max-w-sm flex flex-col m-auto">
    {
      mainTitle ? (
        <h1 class={`text-5xl text-start font-extrabold ${textGradient}`}>
          {mainTitle}
        </h1>
      ) : null
    }
    {
      secundaryTitle ? (
        <h2 class={`text-4xl text-start font-extrabold ${textGradient}`}>
          {secundaryTitle}
        </h2>
      ) : null
    }
    <slot />
    <div class="flex flex-col gap-2">
      <p>{firstTextContent}</p>
      <p>{secondTextContent}</p>
    </div>
  </div>
  <div class="w-1/2 my-auto">
    <img src={imgPath} alt={imgAlt} />
  </div>
</section>
