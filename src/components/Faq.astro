---
import { backgroundGradientColor, textGradient } from "../utils/constants";

export interface Props {
  TextContent: string;
  Title: string;
  
}

const { TextContent, Title } = Astro.props;
---




<div class="accordion" id="accordionExample">
  <div class="flex justify-between accordion-item">
   
    <h2 class="text-4xl text-main font-medium accordion-header" id="headingOne"><button class="
      accordion-button
      focus:outline-none
    " type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true"
      aria-controls="collapseOne">{Title}</button></h2>

    <span class="text-4xl text-gray-600">+</span>
  </div>


  <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
  data-bs-parent="#accordionExample">
  <div class="accordion-body py-4 px-5">
    <p class="py-6">
      {TextContent}
    </p>
    <hr class="bg-slate-600 py-[0.8px]" />
    </div>
    </div>
  
</div>
