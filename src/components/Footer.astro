---
import { Trans } from "astro-i18next/components";
import { mainGradient } from "../utils/constants";
import DotlabsLogo from "./DotlabsLogo.astro";
import Socials from "./Socials.astro";
---

<footer class={`grid grid-cols-1 md:grid-cols-2 h-fit ${mainGradient} `}>
  <div class="flex flex-col gap-5 w-1/2 m-auto my-20">
    <DotlabsLogo white={true} bigger={true} />
    <p class="w-full text-white">
      Deserunt nostrud id amet laborum non nostrud. Magna ipsum aliqua dolor est
      labore laboris minim sunt sit est. Reprehenderit do labore eiusmod amet
      esse fugiat enim sint cupidatat cillum labore.
    </p>
    <Socials white={true} />
  </div>
  <div class="w-1/2 m-auto mb-20">
    <ul class="flex flex-col gap-3 text-white">
      <li><Trans i18nKey="nav.home">Inicio</Trans></li>
      <li><Trans i18nKey="nav.date">Fecha</Trans></li>
      <li>Teams</li>
      <li>Ticket</li>
      <li>FAQ</li>
      <li>Map</li>
    </ul>
  </div>
</footer>
