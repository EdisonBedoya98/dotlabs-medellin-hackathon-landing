---
import { Trans } from "astro-i18next/components";
import { mainGradient } from "../utils/constants";
import DotlabsLogo from "./DotlabsLogo.astro";
import Socials from "./Socials.astro";
---

<footer class={` h-fit ${mainGradient} text-white `}>
  <div
    class="max-w-[55rem] mx-auto flex flex-col gap-11 md:flex-row items-center md:gap-44 px-9 py-14 pb-16"
  >
    <div class="flex flex-col gap-5">
      <DotlabsLogo white={true} bigger={true} />
      <p class="w-full">
        Deserunt nostrud id amet laborum non nostrud. Magna ipsum aliqua dolor
        est labore laboris minim sunt sit est. Reprehenderit do labore eiusmod
        amet esse fugiat enim sint cupidatat cillum labore.
      </p>
      <Socials white={true} />
    </div>
    <div class="flex gap-32 w-full">
      <ul class="flex flex-col gap-3">
        <li class="cursor-pointer"><Trans i18nKey="nav.home">Inicio</Trans></li>
        <li class="cursor-pointer"><Trans i18nKey="nav.date">Fecha</Trans></li>
        <li class="cursor-pointer">Teams</li>
      </ul>
      <ul class="flex flex-col gap-3">
        <li class="cursor-pointer">Ticket</li>
        <li class="cursor-pointer">FAQ</li>
        <li class="cursor-pointer">Map</li>
      </ul>
    </div>
  </div>
</footer>
