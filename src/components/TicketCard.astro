---
import { backgroundGradientColor, textGradient } from "../utils/constants";
---

<section class="h-screen min-h-[20rem] flex justify-between">
  <div
    class={`w-full h-3/4 rounded-3xl flex flex-col bg-clip-padding backdrop-filter backdrop-blur-xl bg-opacity-60 place-content-center shadow-xl ${backgroundGradientColor}`}
  >
    <h1 class={`text-center text-7xl font-extrabold ${textGradient}`}>
      OBTÉN TU TICKET
    </h1>
    <p class="text-center text-3xl font-bold">
      ¡No esperes más y obtén tu ticket para participar!
    </p>
    <button
      class={`w-[300px] gap-3 rounded-2xl py-2 px-12 flex place-self-center justify-center text-white mt-10 bg-main`}
      ><img src="/src/assets/icons/ticket-icon.svg" alt="Alt text" /> Adquirir</button
    >
  </div>
</section>
