---
import { backgroundGradientColor } from "../utils/constants";
import dotlabsHandIcon from "../assets/icons/dotlabs-hand.svg";
import Socials from "./Socials.astro";
import { LanguageSelector, Trans } from "astro-i18next/components";
import DotlabsLogo from "./DotlabsLogo.astro";
---

<header class="h-16 sticky top-0 backdrop-blur-[2px] z-40">
  <div
    class={`absolute top-0 w-full h-full ${backgroundGradientColor} opacity-50 `}
  >
  </div>
  <div
    class={`flex justify-between items-center max-w-[90rem] mx-auto px-12 h-full relative text-main `}
  >
    <DotlabsLogo />
    <nav class="flex gap-x-4">
      <span class="hover:font-semibold"
        ><Trans i18nKey="nav.home">Inicio</Trans></span
      >
      <span class="hover:font-semibold"
        ><Trans i18nKey="nav.date">Fecha</Trans></span
      >
      <!-- Does not require translation -->
      <span class="hover:font-semibold">Teams</span>
      <!-- Does not require translation -->
      <span class="hover:font-semibold">Ticket</span>
      <!-- Does not require translation -->
      <span class="hover:font-semibold">FAQ</span>
      <!-- Does not require translation -->
      <span class="hover:font-semibold">Map</span>
    </nav>
    <Socials>
      <LanguageSelector showFlag={true} class="languaje" />
    </Socials>

    <style>
      .languaje {
        border-radius: 0.5rem;
        padding: 0.3rem 0.6rem;
      }

      .languaje:focus {
        outline: 2px solid blue;
      }
    </style>
  </div>
</header>
