---
import { textGradient } from "../utils/constants";
import Map from "./Map.astro";
import backgroundBlocksRigth from "../assets/images/background_blocks_rigth.svg";
import { t } from "i18next";
---

<section
  id="map"
  class="h-fit mb-36 min-h-[20rem] max-w-[55rem] mx-auto flex justify-center relative px-6"
>
  <div class="grid grid-cols-1 md:grid-cols-2 items-center z-20 gap-10">
    <div class="flex flex-col gap-5 my-auto w-full">
      <h1 class={`text-left text-5xl font-extrabold ${textGradient}`}>
        {t("mapSection.title")}
      </h1>
      <p>
        {t("mapSection.textContent")}
      </p>
    </div>
    <Map />
  </div>
  <img
    src={backgroundBlocksRigth}
    alt="The image cannot be rendered"
    class="absolute bottom-0"
  />
</section>
